<!DOCTYPE html>
<html>
<head>
    <style>
        .loader-container {
            width: 300px;
            padding: 20px;
            text-align: center;
            background: #1a1a1a;
            border-radius: 10px;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .progress-bar {
            width: 100%;
            height: 20px;
            background: #333;
            border-radius: 10px;
            margin: 15px 0;
            overflow: hidden;
        }

        .progress-fill {
            width: 0%;
            height: 100%;
            background: #9B559E;
            transition: width 0.3s ease;
        }

        .status-text {
            color: #fff;
            font-family: Arial, sans-serif;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="loader-container">
        <div class="status-text">Preparando ambiente...</div>
        <div class="progress-bar">
            <div class="progress-fill"></div>
        </div>
        <div class="status-text" id="percentage">0%</div>
    </div>

    <script>
        window.api.onDownloadProgress((event, { percentage, resource }) => {
            document.querySelector('.progress-fill').style.width = `${percentage}%`;
            document.getElementById('percentage').textContent = `${Math.round(percentage)}%`;
            document.querySelector('.status-text:first-child').textContent = 
                `Baixando ${resource}...`;
        });
    </script>
</body>
</html>