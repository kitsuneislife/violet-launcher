{
  "name": "violet-launcher",
  "version": "1.0.3",
  "description": "Launcher para o Violet SMP <3",
  "main": "src/main/index.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "kitsuneislife",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "ejs-electron": "^2.1.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.1.8",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.2.0",
    "minecraft-launcher-core": "^3.18.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.violetlauncher.app",
    "productName": "Violet Launcher",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "extraResources": [
      {
        "from": "src/config/profile.example.json",
        "to": "profile.example.json"
      }
    ],
    "files": [
      "src/**/*",
      "package.json"
    ]
  }
}
